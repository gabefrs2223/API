{
  "version": 2,
  "builds": [
    {
      "src": "index.py",  // Aponta diretamente para index.py na raiz
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.py"  // Aponta para a raiz/index.py
    },
    {
      "src": "/(.*)",
      "dest": "/index.py"  // Aponta para a raiz/index.py
    }
  ]
}
